# Copiá este archivo a `fly.toml` o dejá que `fly launch` lo genere.
# OJO: el valor de `app` debe coincidir con el nombre real de tu app en Fly.

app = "bot-gastos-ejemplo"

[build]
  dockerfile = "Dockerfile"

[env]
  RAILS_ENV = "production"
  RAILS_LOG_TO_STDOUT = "1"
  RAILS_SERVE_STATIC_FILES = "1"

[deploy]
  release_command = "bin/rails db:migrate"

[[services]]
  internal_port = 80
  protocol = "tcp"

  [[services.ports]]
    handlers = ["http"]
    port = 80

  [[services.ports]]
    handlers = ["tls", "http"]
    port = 443


